@using System.Data
@model TallentexResult.Entities.StudentMain

@if (Model.ds1 != null)
{
    if (Model.ds1.Tables.Count > 0)
    {
        DataTable dt = Model.ds1.Tables[0];
        if (dt != null && dt.Rows.Count > 0)
        {
            <div class="card" style="height:460px;">
                <div class="card-content collapse show">
                    <div class="card-body">
                        <div class="text-center row clearfix mb-2">
                            <div class="col-12">
                                <img src="@ViewBag.Photo" class="rounded-circle height-100" alt="Card image" />
                            </div>
                        </div>
                        <h3 class="text-center">@dt.Rows[0]["StudentName"]</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-de mb-0">
                            <tbody>
                                <tr>
                                    <td>TALLENTEX Roll No.</td>
                                    <td><i class="icon-layers"></i> @dt.Rows[0]["AppFormNo"]</td>
                                </tr>
                                <tr>
                                    <td>Present Class</td>
                                    <td><i class="icon-graduation"></i> @(new TallentexResult.Servies.Global().ToRoman((int)dt.Rows[0]["Class"]))</td>
                                </tr>
                                <tr>
                                    <td>Exam Mode</td>
                                    <td>
                                        @if (dt.Rows[0]["exammode"].ToString() == "ONLINE")
                                        {
                                            <i class="icon-volume-1"></i>
                                        }
                                        else
                                        {
                                            <i class="icon-volume-off"></i>
                                        }
                                        @dt.Rows[0]["exammode"]
                                    </td>
                                </tr>
                                @if (dt.Columns.Contains("exammode") && dt.Rows[0]["exammode"].ToString()?.ToUpper() == "ONLINE")
                                {

                                }
                                else
                                {
                                    <tr>
                                        <td>Zone</td>
                                        <td><i class="la la-building-o"></i> @dt.Rows[0]["TZone"]</td>
                                    </tr>
                                    <tr>
                                        <td>State</td>
                                        <td><i class="la la-building"></i> @dt.Rows[0]["TState"]</td>
                                    </tr>
                                }
                                <tr>
                                    <td>Exam Date:</td>
                                    <td><i class="icon-calendar"></i> @dt.Rows[0]["testdate"]</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>
            </div>
        }
    }
}